<%- include('../partials/navbar.ejs') %>
<!-- Front end home page for specialist users -->
<div class="main_section" id="admin_section">
    <div class="admin_top">
        <div class="admin_panel">
            <div class="strike_line sl4">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi4">
                    <i class="fa-solid fa-gear"></i>
                </div>
                <div class="panel_title">
                    <p>Total</p>
                    <p><%= ticket_total %></p>
                </div>

            </div>

        </div>
        <div class="admin_panel">
            <div class="strike_line sl2">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi2">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="panel_title">
                    <p>Resolved</p>
                    <p><%= closed_total %></p>
                </div>

            </div>


        </div>
        <div class="admin_panel">
            <div class="strike_line sl1">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi1">
                    <i class="fa-solid fa-pen"></i>
                </div>
                <div class="panel_title">
                    <p>Assigned</p>
                    <p><%= assigned_total %></p>
                </div>

            </div>

        </div>
        <div class="admin_panel">
            <div class="strike_line sl3">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi3">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="panel_title">
                    <p>Overdue</p>
                    <p> <%= overdue_ticket_total %>  </p>
                </div>

            </div>

        </div>

    </div>

    <div class="container">
        <div class="row">
            <div class="col m-3 main_spec_container">
                <%- include('../partials/ticket_table.ejs', {tickets: spec_tickets, usertype: 'specialist'}) %>
            </div>

            <div class="col m-3 main_spec_container">
                <div class="table_section">
                    <div class="table_top">
                        <div class="table_title_container">
                            <h1 class="table_title">Open Tickets</h1>
                            <p class="table_title_info">Total <%= open_total %> </p>
                        </div>
                        <div class="table_options_container">
                            <!-- Pagination section to move through different pages in view -->

                            <div class="table_scroll_section">
                                <div class="table_scroll_container">

                                    <button class="btn"
                                    <% if (openPage === 1) { %> disabled
                                            <% } %>
                                            onclick="prevPage(true)"
                                    >
                                        <span class="table-icon">
                                            <i class="fa-solid fa-angle-left"></i>
                                        </span>
                                    </button>

                                    <span class="page-info">
                                        <span class="page-num">Page <%= openPage %></span>
                                    </span>

                                    <button class="btn" onclick="nextPage(true)">
                                        <span class="table-icon">
                                            <i class="fa-solid fa-angle-right"></i>
                                        </span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="ticket_table">
                        <thead class="table_headers">
                        <tr>
                            <th>ID</th>
                            <th>Problem Type</th>
                            <th>Title</th>
                            <th>Last Updated</th>
                        </tr>
                        </thead>

                        <tbody class="ticket-body op-ticket-body">

                        <% open_tickets.forEach((ticket, i) => { %>
                            <tr>
                                <td>
                                    <%= ticket.ticketId %>
                                </td>
                                <td>
                                    <%= ticket.expertises %>
                                </td>
                                <td>
                                    <a href="/ticket/<%= ticket.ticketId %>">
                                        <%= ticket.description %>
                                    </a>
                                </td>
                                <td>
                                    <%= ticket.updateDate %>
                                </td>

                            </tr>
                        <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="scripts/table_panel.js" crossorigin="anonymous"></script>

