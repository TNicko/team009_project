<%- include('../partials/navbar.ejs') %>

<div class="main_section" id="admin_section">
    <div class="admin_top">
        <div class="admin_panel">
            <div class="strike_line sl2">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi2">
                    <i class="fa-solid fa-check"></i>
                </div>
                <div class="panel_title">
                    <p>Resolved</p>
                    <p><%= closed_total %></p>
                </div>

            </div>


        </div>
        <div class="admin_panel">
            <div class="strike_line sl1">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi1">
                    <i class="fa-solid fa-pen"></i>
                </div>
                <div class="panel_title">
                    <p>Assigned</p>
                    <p><%= assigned_total %></p>
                </div>

            </div>

        </div>
        <div class="admin_panel">
            <div class="strike_line sl3">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi3">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                </div>
                <div class="panel_title">
                    <p>Overdue</p>
                    <p>0</p>
                </div>

            </div>

        </div>
        <div class="admin_panel">
            <div class="strike_line sl4">

            </div>
            <div class="panel_info">
                <div class="panel_icon pi4">
                    <i class="fa-solid fa-gear"></i>
                </div>
                <div class="panel_title">
                    <p>Total</p>
                    <p><%= ticket_total%></p>
                </div>

            </div>

        </div>

    </div>

    <div class="container">
        <div class="row">
            <div class="col m-3 main_spec_container">
                <%- include('../partials/ticket_table.ejs', {tickets: spec_tickets, usertype: 'specialist'}) %>
            </div>

            <div class="col m-3 main_spec_container">
                <div class="table_section">
                    <div class="table_top">
                        <div class="table_title_container">
                            <h1 class="table_title">Open Tickets</h1>
                            <p class="table_title_info">Total <%= open_total %> </p>
                        </div>
                        <div class="table_options_container">
                            <%- include('../partials/pagination.ejs') %>
                        </div>
                    </div>
                    <table class="ticket_table">
                        <thead class="table_headers">
                        <tr>
                            <th>ID</th>
                            <th>Problem Type</th>
                            <th>Title</th>
                            <th>Last Updated</th>
                        </tr>
                        </thead>

                        <tbody class="ticket-body op-ticket-body">

                        <% open_tickets.forEach(function(ticket){ %>
                            <tr>
                                <td>
                                    <%= ticket.ticketId %>
                                </td>
                                <td>
                                    <%= ticket.expertises %>
                                </td>
                                <td>
                                    <%= ticket.description %>
                                </td>
                                <td>
                                    [date]
                                </td>

                            </tr>
                        <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="scripts/index.js" type="text/javascript"></script>