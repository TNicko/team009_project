<%- include('./partials/spec_navbar.ejs') %>

<div class="container">
    <div class="m-4 p-4 bg-white rounded-3">
        <h1>Account</h1>

        <h3 class="my-3">Information</h3>

        <table class="table table-light">
            <tbody> 
                <tr>
                    <th>Username</th>
                    <td><%= username %></td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><%= user.name %></td>
                </tr>
                <tr>
                    <th>User ID</th>
                    <td><%= user.id %></td>
                </tr>
                <tr>
                    <th>Account Type</th>
                    <td><%= user.type %></td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td><%= user.telephone %></td>
                </tr>

                <% if (user.type != "external specialist") { %>
                    <tr>
                        <th>Job Title</th>
                        <td><%= user.job %></td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td><%= user.department %></td>
                    </tr>
                <% } %>   

            <tr>
                <th class="align-middle">Password</th>
                <td>
                    <button class="btn btn-outline-secondary" id="logout-btn">
                        Change password
                    </button>
                </td>
            </tr>
            </tbody>
        </table>


        <a href="/logout" class="btn btn-outline-danger my-3" id="logout-btn">Logout</a>
    </div>
</div>

<script src="scripts/account.js" type="text/javascript"></script>